<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_video_from_device"
        android:textSize="28sp"
        android:textAlignment="center" />

    <!-- compiler suggested 0dp instead of wrap_content for better performance?  -->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@null"
        android:contentDescription="@string/uploadvideobutton"
        app:srcCompat="@drawable/upload_cloud"
        android:layout_weight="1"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="selectLocalVideo"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_weight="0.3"
        />
</LinearLayout>